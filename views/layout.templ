// views/layout.templ
package views

templ Layout(title string) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<script src="/assets/js/htmx.min.js"></script>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<style>
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 0;
                background-color: #f4f4f4;
            }
            header {
                background-color: #333;
                color: #fff;
                padding: 1em 0;
                text-align: center;
            }
            main {
                max-width: 800px;
                margin: 2em auto;
                padding: 1em;
                background-color: #fff;
                border-radius: 5px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }
            h1, h2, h3 {
                color: #333;
            }
            p {
                line-height: 1.6;
            }
            footer {
                text-align: center;
                padding: 1em 0;
                color: #777;
                font-size: 0.8em;
            }
            a {
                color: #3498db;
                text-decoration: none;
            }
            a:hover {
                text-decoration: underline;
            }
        </style>
			<title>Minimalist Blog</title>
		</head>
		<body>
			<header>
				<h1>My Minimalist Blog</h1>
			</header>
			<main>
				{ children... }
			</main>
			<footer>
				<p>&copy; 2024 My Minimalist Blog</p>
			</footer>
		</body>
	</html>
}
